<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_cornermenu_container"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cornermenu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="L'Officiel"
            android:text="L'Officiel"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rb_cornermenu_stars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.5"
            android:isIndicator="true"
            android:backgroundTint="@android:color/holo_green_light"
            android:progressTint="@android:color/holo_green_light"
            android:secondaryProgressTint="@android:color/transparent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cornermenu_title" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cornermenu_rating_nb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(72)"
            android:text="(72)"
            app:layout_constraintTop_toTopOf="@id/rb_cornermenu_stars"
            app:layout_constraintBottom_toBottomOf="@id/rb_cornermenu_stars"
            app:layout_constraintStart_toEndOf="@id/rb_cornermenu_stars"
            android:layout_marginStart="4dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cornermenu_infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Restaurant  \u00b7 €€€"
            android:text="Restaurant  \u00b7 €€€"
            app:layout_constraintTop_toBottomOf="@id/rb_cornermenu_stars"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cornermenu_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="166 Boulevard Haussmann, 75008 Paris"
            android:text="166 Boulevard Haussmann, 75008 Paris"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@id/tv_cornermenu_infos"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cornermenu_openinghours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="opening"
            app:layout_constraintTop_toBottomOf="@id/tv_cornermenu_address"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cornermenu_moreinfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cornermenu_openinghours"
            app:layout_constraintStart_toStartOf="parent"
            android:text="more infos"
            android:textColor="#0000FF"
            android:textStyle="italic"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cornermenu_googlec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_cornermenu_moreinfos"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="google"
            android:textStyle="italic"
            android:textSize="8sp"
            />

    <FrameLayout
        android:id="@+id/fl_cornermenu_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vi_cornermenu_separator"/>

    <View
            android:id="@+id/vi_cornermenu_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#40000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_cornermenu_googlec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cornermenu_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="go"
            android:textColor="@color/turquoise"
            android:background="@null"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@id/vi_cornermenu_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bt_cornermenu_book"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cornermenu_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="call"
            android:textColor="@color/turquoise"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/vi_cornermenu_separator"
            app:layout_constraintStart_toEndOf="@id/bt_cornermenu_go"
            app:layout_constraintEnd_toStartOf="@id/bt_cornermenu_save"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cornermenu_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:textColor="@color/turquoise"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/vi_cornermenu_separator"
            app:layout_constraintStart_toEndOf="@id/bt_cornermenu_book"
            app:layout_constraintEnd_toEndOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>